<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/first_text"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="First Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"

        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/first_text"
        android:layout_toLeftOf="@+id/first_text"
        android:text="First Name:"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/last_text"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_text"


        android:layout_marginTop="3dp"
        android:hint="Last Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/budget_text"
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:layout_below="@+id/last_text"
        android:hint="Budget"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/location_text"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_text"
        android:layout_centerHorizontal="true"
        android:hint="Location"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/descrption_text"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_text"
        android:layout_centerHorizontal="true"
        android:hint="Description"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/noRoom_text"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descrption_text"
        android:layout_centerHorizontal="true"
        android:hint="No. of Rooms"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_below="@+id/noRoom_text" />



</RelativeLayout>