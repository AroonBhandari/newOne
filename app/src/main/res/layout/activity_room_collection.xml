<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_kotha"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="134dp"

        />

    <EditText
        android:id="@+id/first_text"
        android:layout_width="362dp"
        android:layout_height="57dp"
        android:layout_below="@+id/image"

        android:layout_alignParentTop="true"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:hint="First Name" />

    <EditText
        android:id="@+id/last_text"
        android:layout_width="362dp"
        android:layout_height="57dp"
       android:layout_below="@+id/first_text"
        android:layout_centerHorizontal="true"
        android:hint="Last Name"/>

    <EditText
        android:id="@+id/budget_text"
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:layout_below="@+id/last_text"
        android:hint="Budget"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/location_text"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_text"
        android:layout_centerHorizontal="true"
        android:hint="Location"
        />

    <EditText
        android:id="@+id/descrption_text"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_text"
        android:layout_centerHorizontal="true"
        android:hint="Description"
         />

    <EditText
        android:id="@+id/noRoom_text"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descrption_text"
        android:layout_centerHorizontal="true"
        android:hint="No. of Rooms"
         />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noRoom_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="19dp"
        android:onClick="insert"
        android:text="Submit" />

    <Button
        android:id="@+id/viewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"

        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/button1"
        android:text="View List" />


</RelativeLayout>